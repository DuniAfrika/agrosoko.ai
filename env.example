# Copy this file to .env and fill in your credentials
# Command: cp env.example .env
# NEVER commit .env to git!

# ==== REQUIRED CREDENTIALS ====

# Google Sheets (REQUIRED)
GOOGLE_SHEETS_CREDS_PATH=credentials.json
GOOGLE_SHEETS_NAME=AgroGhala_Logs
GOOGLE_SHEETS_ID=

# WhatsApp Business API (REQUIRED)
WHATSAPP_TOKEN=
WHATSAPP_PHONE_ID=
WHATSAPP_VERIFY_TOKEN=

# ==== OPTIONAL ====

# Weather API (Optional - system uses free Open-Meteo by default)
OPENWEATHER_API_KEY=

# ==== APPLICATION SETTINGS ====

APP_ENV=development
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true
LOG_LEVEL=INFO

# ==== DATA & STORAGE ====

DATA_DIR=data
ARCHIVE_DATA=true

# ==== WORKFLOW ====

WORKFLOW_TRIGGER_TIME=04:30
MAX_RETRIES=3
API_TIMEOUT=60

# ==== NOTIFICATIONS ====

ENABLE_FARMER_NOTIFICATIONS=true
ENABLE_ADMIN_NOTIFICATIONS=false
ADMIN_EMAIL=admin@example.com
ADMIN_PHONE=254700000000

# ==== FEATURES ====

ENABLE_PRICE_CALCULATION=true
ENABLE_WEATHER_INTEGRATION=true
ENABLE_SHEETS_LOGGING=true
ENABLE_WHATSAPP_MESSAGING=false

# ==== PRICING ====

FARMGATE_PERCENTAGE=0.75
MIN_FARMER_MARGIN=5

# ==== RATE LIMITING ====

MESSAGE_DELAY=2
MAX_MESSAGES_PER_MINUTE=30
API_REQUEST_DELAY=1

# ==== SECURITY ====

SECRET_KEY=
ALLOWED_HOSTS=localhost,127.0.0.1
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8000.

