    "/api/scrape/kamis": {
      "get": {
        "summary": "Scrape Kamis Endpoint",
        "description": "Scrape KAMIS market data.\n\nArgs:\n    force_refresh: If true, bypass cache and perform fresh scrape\n    \nReturns:\n    - Nairobi wholesale prices for key crops\n    - Date of data\n    - Source (kamis/cache/fallback)\n\nBy default, returns cached data if already scraped today.\nUse ?force_refresh=true to force a fresh scrape.",
        "operationId": "scrape_kamis_endpoint_api_scrape_kamis_get",
        "parameters": [
          {
            "name": "force_refresh",
            "in": "query",
            "required": false,
            "schema": {
              "type": "boolean",
              "default": false,
              "title": "Force Refresh"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/api/weather/{county}": {
      "get": {
        "summary": "Get Weather Endpoint",
        "description": "Get weather forecast for a Kenyan county.\n\nArgs:\n    county: Name of Kenyan county (e.g., Nairobi, Kiambu)\n    \nReturns:\n    - Rainfall probability (%)\n    - Expected rainfall (mm)\n    - Data source",
        "operationId": "get_weather_endpoint_api_weather__county__get",
        "parameters": [
          {
            "name": "county",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "title": "County"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/api/prices": {
      "get": {
        "summary": "Get Prices Endpoint",
        "description": "Get current wholesale prices from KAMIS.\n\nArgs:\n    force_refresh: If true, bypass cache and get fresh prices\n\nReturns:\n    - Current wholesale prices for all crops\n    - Date of data\n    - Whether data is cached\n    \nBy default, uses cached data if available from today.",
        "operationId": "get_prices_endpoint_api_prices_get",
        "parameters": [
          {
            "name": "force_refresh",
            "in": "query",
            "required": false,
            "schema": {
              "type": "boolean",
              "default": false,
              "title": "Force Refresh"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/api/prices/fair": {
      "get": {
        "summary": "Get Fair Prices Endpoint",
        "description": "Get fair farm-gate prices (calculated from wholesale).\n\nArgs:\n    force_refresh: If true, bypass cache and calculate from fresh data\n\nReturns:\n    - Fair farm-gate prices for farmers\n    - Calculation method\n    - Date of data\n    - Whether data is cached\n    \nBy default, uses cached wholesale prices if available from today.",
        "operationId": "get_fair_prices_endpoint_api_prices_fair_get",
        "parameters": [
          {
            "name": "force_refresh",
            "in": "query",
            "required": false,
            "schema": {
              "type": "boolean",
              "default": false,
              "title": "Force Refresh"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
