              "application/json": {
                "schema": {}
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/api/counties": {
      "get": {
        "summary": "Get Counties Endpoint",
        "description": "Get list of all supported Kenyan counties.\n\nReturns:\n    - List of 47 Kenyan counties with coordinates",
        "operationId": "get_counties_endpoint_api_counties_get",
