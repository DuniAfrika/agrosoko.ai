    "/api/buyers": {
      "get": {
        "summary": "Get All Buyers Endpoint",
        "description": "Get all registered buyers or filter by type, county, or crop.\n\nQuery Parameters:\n    - buyer_type (optional): Filter by buyer type (Hotel, Restaurant, Mama Mboga, Supermarket, Wholesaler)\n    - county (optional): Filter by county\n    - crop (optional): Filter by crop interest (e.g., \"Tomatoes\", \"Sukuma Wiki\")\n\nReturns:\n    - List of buyers matching the filters\n    - Total count\n    - Available filters",
        "operationId": "get_all_buyers_endpoint_api_buyers_get",
        "parameters": [
          {
            "name": "buyer_type",
            "in": "query",
            "required": false,
            "schema": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ],
              "title": "Buyer Type"
            }
          },
          {
            "name": "county",
            "in": "query",
            "required": false,
            "schema": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ],
              "title": "County"
            }
          },
          {
            "name": "crop",
            "in": "query",
            "required": false,
            "schema": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ],
              "title": "Crop"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
